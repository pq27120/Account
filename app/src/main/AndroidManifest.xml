<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leaf.account">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="com.leaf.account.activity.CoCoinApplication"
        android:allowBackup="true"
        android:icon="@drawable/cocoin_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.leaf.account.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.leaf.account.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeMain" />
        <activity
            android:name="com.leaf.account.activity.AccountBookTodayViewActivity"
            android:label="@string/title_activity_account_book"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.leaf.account.activity.AccountBookCustomViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.AccountBookReportViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.AccountBookTagViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.AccountBookMonthViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.TagSettingActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.AccountBookListViewActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.EditRecordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.EditPasswordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.SetPasswordActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.leaf.account.activity.AccountBookSettingActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/CoCoinSettingActivityStyle" />
        <activity android:name="com.github.mmin18.layoutcast.ResetActivity" />
        <activity android:name="com.leaf.account.activity.HelpActivity" />
        <activity android:name="com.leaf.account.activity.FeedbackActivity" />
        <activity android:name="com.leaf.account.activity.AboutActivity" />
        <activity android:name="com.leaf.account.activity.ShowActivity" />
    </application>

</manifest>
